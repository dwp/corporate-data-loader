FROM python:3-buster

ENV SERVICE_USER=dataworks
ENV SERVICE_USER_HOME=/home/$SERVICE_USER
ENV APPLICATION_HOME=/opt/app
RUN mkdir -p $SERVICE_USER_HOME $APPLICATION_HOME
RUN useradd -d $SERVICE_USER_HOME $SERVICE_USER
RUN pip install awscli
RUN chown -R $SERVICE_USER.$SERVICE_USER $SERVICE_USER_HOME $APPLICATION_HOME
